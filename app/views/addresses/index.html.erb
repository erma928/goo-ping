<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Address type</th>
    <th>Line1</th>
    <th>Line2</th>
    <th>City</th>
    <th>State or province</th>
    <th>Postal code</th>
    <th>Updated by</th>
    <th>Owner</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.address_type %></td>
    <td><%= address.line1 %></td>
    <td><%= address.line2 %></td>
    <td><%= address.city %></td>
    <td><%= address.state_or_province %></td>
    <td><%= address.postal_code %></td>
    <td><%= address.updated_by %></td>
    <td><%= address.owner %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


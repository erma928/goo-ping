<%= simple_form_for(@property) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :indoor %>
    <%= f.input :area %>
    <%= f.association :owner %>
    <%= f.input :owner_status %>
    <%= f.input :usage_status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

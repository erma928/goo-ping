<h1>Listing properties</h1>

<table>
  <tr>
    <th>Indoor</th>
    <th>Area</th>
    <th>Owner</th>
    <th>Owner status</th>
    <th>Usage status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @properties.each do |property| %>
  <tr>
    <td><%= property.indoor %></td>
    <td><%= property.area %></td>
    <td><%= property.owner %></td>
    <td><%= property.owner_status %></td>
    <td><%= property.usage_status %></td>
    <td><%= link_to 'Show', property %></td>
    <td><%= link_to 'Edit', edit_property_path(property) %></td>
    <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


      h3.color-owner = t("views.navigation.organize_activity")
      p = t("views.home.organize_activity_intro")
      = link_to t("views.home.learn_more"), organize_activity_intro_path, class: "btn btn-small"
    .span3
      = image_tag "owner-icon.png", alt: t("views.navigation.show_talent")
      h3.color-owner = t("views.navigation.show_talent")
      p = t("views.home.show_talent_intro")
      = link_to t("views.home.learn_more"), show_talent_intro_path, class: "btn btn-small"
    .span3
      = image_tag "owner-icon.png", alt: t("views.navigation.share_property")

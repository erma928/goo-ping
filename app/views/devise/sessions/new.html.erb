<h2><%= t("devise.views.sessions.new.title")%></h2>
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
  <%= f.input :email, :autofocus => true %>
  <%= f.input :password, label: t("devise.views.sessions.new.password")%>
  <%= f.input :remember_me, label: t("devise.views.sessions.new.remember_me"), :as => :boolean if devise_mapping.rememberable? %>
  <%= f.button :submit, t("devise.views.sessions.new.submit"), :class => 'btn-primary' %>
<% end %>
<%= render "devise/shared/links" %>
